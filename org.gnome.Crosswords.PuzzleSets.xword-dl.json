{
    "app-id": "org.gnome.Crosswords.PuzzleSets.xword-dl",
    "runtime": "org.gnome.Crosswords",
    "runtime-version": "stable",
    "branch": "1",
    "sdk" : "org.gnome.Sdk//42",
    "build-extension": true,
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/app/extensions"
    },
    "modules": [
        "python3-requirements.json",
        {
            "name": "xword-dl",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/blandford/xword-dl.git",
                    "commit": "29ad0854a72e64b9417145a8a4c619da32d1f6db"
                }
            ],
            "build-commands": [
                "install xword_dl.py ${FLATPAK_DEST}/bin/xword-dl"
            ]
        },
        {
            "name": "puzzle-sets-xword-dl",
            "buildsystem": "meson",
            "config-opts" : [ "-Dflatpak=true" ],
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jrb/puzzle-sets-xword-dl.git",
                    "commit" : "3d20446e65827a96f15c8646141bf41cd676efe8"
                }
            ]
        }
    ]
}
